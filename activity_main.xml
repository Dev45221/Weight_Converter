<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/b"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">
    <Button
        android:id="@+id/bt1"
        android:layout_width="202dp"
        android:layout_height="68dp"
        android:fontFamily="serif"
        android:text="Convert"
        android:textColorLink="#009688"
        android:textSize="24sp"
        app:backgroundTint="#DD2C00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="296dp"
        android:layout_height="50dp"
        android:layout_marginTop="76dp"
        android:fontFamily="serif"
        android:text="Enter input in kg : "
        android:textColor="#0C0A0A"
        android:textColorHint="#00BFA5"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/bt1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:fontFamily="serif"
        android:text="The result in pounds :"
        android:textColor="#0C0A0A"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt1"
        app:layout_constraintVertical_bias="0.241" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="174dp"
        android:layout_height="80dp"
        android:ems="10"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="Enter Here"
        android:inputType="number"
        android:textColor="#DD2C00"
        android:textColorHint="#E60A0A"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintVertical_bias="0.051" />

    <EditText
        android:id="@+id/et2"
        android:layout_width="178dp"
        android:layout_height="93dp"
        android:layout_marginBottom="96dp"
        android:ems="10"
        android:fontFamily="serif"
        android:gravity="center"
        android:hint="Result"
        android:inputType="number"
        android:textColor="#FFAB00"
        android:textColorHint="#E60A0A"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2"
        app:layout_constraintVertical_bias="0.688" />
</androidx.constraintlayout.widget.ConstraintLayout>